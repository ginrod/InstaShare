@page

@model InstaShare.Client.Pages.FilesModel

@inject Configuration.ApiSettings ApiSettings

@{
    ViewData["Title"] = "Files";
}

<h2 class="text-xl font-semibold mb-4">Upload files</h2>

<div class="space-y-4">
    <div>
        <input id="fileInput" type="file" multiple class="border p-2 rounded" />
        <button id="uploadBtn" class="ml-2 px-4 py-2 rounded bg-blue-600 text-white" onclick="uploadFile()">Upload</button>
        <span id="uploadStatus" class="ml-3 text-sm"></span>
    </div>

    <div id="filesContainer" class="border rounded p-2"></div>
</div>

<div class="container mt-5" style="max-width: 900px">
    <h2>Search files</h2>

    <div class="row g-2 mb-3 align-items-center">
        <div class="col-sm-8">
            <input type="text" id="searchFilesInput"
                   class="form-control form-control-lg"
                   placeholder="Start typing to find files..."
                   />
        </div>
        <div class="col-sm-4">
            <div class="d-flex gap-2">
                <button class="btn btn-primary btn-lg flex-fill" onclick="searchFiles()">Search</button>
                <button class="btn btn-secondary btn-lg flex-fill" onclick="searchFiles()">Find All</button>
            </div>
        </div>
    </div>

    <div id="errorMessage" style="color: red; margin-top: 1em;"></div>

    <div class="container">
        <div class="row justify-content-center">
            <div id="filesContainer" class="col-12"></div>
        </div>
    </div>

    <div id="paginationControls" style="display: none;" class="mt-3 text-center">
        <button id="prevBtn" class="btn btn-secondary me-2" onclick="previousPage()">Previous</button>
        <button id="nextBtn" class="btn btn-secondary" onclick="nextPage()">Next</button>

        <p class="mt-2">Page: <span id="pageIndicator"></span> of <span id="totalPages"></span></p>
    </div>

</div>

<script>
    window.appConfig = {
      accessToken: '@Model.AccessToken',
      baseUrl: '@ApiSettings.BaseUrl'
    };
</script>

<script src="~/js/files.js"></script>
