@page

@inject Configuration.ApiSettings ApiSettings

@{
    ViewData["Title"] = "Files";
}

<div class="container text-center mt-5">
    <div class="container">
        <div class="row justify-content-center">
            <div id="filesContainer" class="col-12" data-api="@ApiSettings.BaseUrl"></div>
        </div>
    </div>

    <div id="paginationControls" style="display: none;" class="mt-3 text-center">
        <button id="prevBtn" class="btn btn-secondary me-2" onclick="previousPage()">Previous</button>
        <button id="nextBtn" class="btn btn-secondary" onclick="nextPage()">Next</button>

        <p class="mt-2">Page: <span id="pageIndicator"></span> of <span id="totalPages"></span></p>
    </div>
</div>

<script src="~/js/files.js"></script>
